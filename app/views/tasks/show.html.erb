<div class="d-flex flex-column p-5 justify-content-center text-center">

<h1 class="mb-3 p-2 border bg-light"><%= @task.title %></h1>
<div class="mb-3 p-2 border bg-light rounded">
  <p><%= @task.details %></p>
  <input class="border bg-light rounded" type="checkbox" name="tast" value="completed" <%= "checked" if @task.completed == true %>>
  <label for="completed">This task is completed</label>
</div>
<div class="align-center p-2">
  <%= link_to 'Edit task', edit_task_path, class: "btn btn-primary p-2 m-25 w-25"%>
  <%= link_to 'Tasks Index', tasks_path, class: "btn btn-secondary d-inline-flex" %>
  </div>
</div>
